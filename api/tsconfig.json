{
  "compilerOptions": {
    "target": "es6", // Set the JavaScript version for output files
    "module": "commonjs", // Use commonjs module system
    "outDir": "./dist", // Redirect output structure to the directory
    "rootDir": "./src", // Specify the root directory of input files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables compilation of ECMAScript modules
    "skipLibCheck": true, // Skip type checking of all declaration files
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true, // Generates corresponding .map files
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["./src/**/*"], // Include all files in the src folder
  "exclude": ["./node_modules"] // Exclude the node_modules folder
}
