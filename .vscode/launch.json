  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch API",
      "preLaunchTask": "docker-compose and build",
      "program": "${workspaceFolder}/api/src/app.ts",
      "outFiles": ["${workspaceFolder}/api/dist/**/*.js"],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/api/",
      "env": {
        "NODE_ENV": "development",
        // "CACHE": "redis"
        "CACHE": "local"
      }
    }
  ]
}
